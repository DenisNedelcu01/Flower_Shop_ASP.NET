@model FlowerShop.Models.Articol

@{
    ViewData["Title"] = "Editeaza articolul";
}

<h1>Editeaza articolul</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArticolID" />
            <div class="form-group">
                <label asp-for="Titlu" class="control-label"></label>
                <input asp-for="Titlu" class="form-control" />
                <span asp-validation-for="Titlu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Continut" class="control-label"></label>
                <input asp-for="Continut" class="form-control" />
                <span asp-validation-for="Continut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inapoi la articole</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
