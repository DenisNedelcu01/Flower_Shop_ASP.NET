@model IEnumerable<FlowerShop.Models.Produs>

@{
    ViewData["Title"] = "Produse";
}

<h1>Produse</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Galerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stoc)
            </td>
            <td>
                @if (item.Galerie != null && !string.IsNullOrEmpty(item.Galerie.Link))
                {
                    <img src="@item.Galerie.Link" alt="Photo" style="width: 150px; height: auto;">
                }
                else
                {
                    <span>No photo available</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdusID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdusID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
